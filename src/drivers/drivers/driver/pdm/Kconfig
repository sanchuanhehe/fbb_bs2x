config PDM_SUPPORT_LPC
    bool
    prompt "PDM Support low power control, control power and clock"
    default n
    depends on DRIVER_SUPPORT_PDM

config PDM_SUPPORT_QUERY_REGS
    bool
    prompt "PDM support query regs values"
    default n
    depends on DRIVER_SUPPORT_PDM